<table>
  <% for user in @users %>
    <tr>
      <td>
        <%= user.full_name %>
      </td>
      <td>
        <%= button_to("изменить", { :controller => 'admin/user', :action => 'edit', :id => user }, :method => :get) %>
      </td>
      <td>
        <%= button_to("удалить", { :controller => 'admin/user', :action => 'destroy', :id => user }, :method => :delete) %>
      </td>
     
      <% unless user.activated %>
        <td>
          <% if user.id != 1 %>
            <%= button_to("активировать", { :controller => 'admin/user', :action => 'activate', :id => user }) %>
          <% end %>
        </td>
      <% end %>
    <tr>
  <% end %>
</table>
<%= button_to("добавить", { :controller => 'admin/user', :action => 'new'}, :method => :get) %>
